---
import { data } from "../../public/data";
import BackArrow from "../components/icons/back-arrow.astro";
import Item from "../components/product.astro";
import Layout from "../layouts/Layout.astro";

const products = data.filter((item) => item.category === "Collar");
---

<Layout title="Pulseras">
	<h1 class="text-center font-bold">Collares</h1>

	<a href="/" class="absolute top-0 left-0 pl-5 pt-5">
		<BackArrow />
	</a>

	<div class="container">
		{products.map((item) => <Item imgUrl={item.imageName} />)}
	</div>
</Layout>

<style>
	h1 {
		margin-bottom: 2rem;
		margin-top: 1rem;
	}
	.container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		grid-auto-rows: 1fr;
		width: 100%;
		margin: 0 auto;
		row-gap: 1rem;
	}

	.container > * {
		border-radius: 4rem;
	}

	@media (min-width: 480px;) {
		.container {
			max-width: 800px;
		}
	}
</style>
